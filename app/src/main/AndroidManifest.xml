        <activity
            android:name=".ui.user.RegisterActivity"
            android:label="" >
        </activity>
        <activity
            android:name=".ui.user.UserPasswordActivity"
            android:label="" >
        </activity>
        <activity
            android:name=".ui.user.UserEditActivity"
            android:label="" >
