<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.naton.hardware.ui.user.RegisterActivity">

    <RelativeLayout
        android:id="@+id/phoneRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/edittext_white_bg"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/phoneIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/ic_phone_balck" />

        <EditText
            android:id="@+id/phoneEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/phoneIV"
            android:layout_centerVertical="true"
            android:hint="请输入手机号"
            android:phoneNumber="true"
            android:background="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/codeRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_white_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/phoneRL"
        android:layout_toLeftOf="@+id/codeBtn"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/codeIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/ic_password_black" />

        <EditText
            android:id="@+id/codeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/codeIV"
            android:layout_centerVertical="true"
            android:hint="请输入验证码"
            android:background="@null" />
    </RelativeLayout>

    <Button
        android:id="@+id/codeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneRL"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:padding="5dp"
        android:text="获取验证码" />

    <RelativeLayout
        android:id="@+id/passRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_white_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/codeRL"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/passIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/ic_password_black" />

        <EditText
            android:id="@+id/passEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:password="true"
            android:layout_toRightOf="@+id/passIV"
            android:hint="请输入密码"
            android:background="@null" />
    </RelativeLayout>

    <Button
        android:id="@+id/regBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/passRL"
        android:text="注  册"
        android:background="@drawable/save_selector"
        android:textSize="18sp" />

</RelativeLayout>
